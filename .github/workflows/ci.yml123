name: CI

on:
  push:
    branches:
      - '**'
  pull_request:
    branches:
      - '**'

jobs:
  build_and_test:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.12'

      - name: Install dependencies
        run: pip install -r module_30_ci_linters/homework/hw1/requirements.txt

      - name: Run pytests
        run: pytest --maxfail=1 --disable-warnings -q

      - name: run MyPy code check
        run: mypy

      - name: run Black code checks
        run: black --diff --check

      - name: run isort checks
        run: isort --check-only

      - name: Run Flake8
        run: flake8
